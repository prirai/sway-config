{
  "layer": "top",
  "spacing": 0,
  "height": 32,
  "gtk-layer-shell": true,
  "ipc": true,

  "modules-left": ["custom/launcher", "sway/workspaces", "custom/current-mode"],

  "modules-center": ["idle_inhibitor", "sway/window"],

  "modules-right": [
    "pulseaudio",
    "network",
    "bluetooth",
    "cpu",
    "memory",
    "battery",
    "tray",
    "custom/power",
    "clock",
  ],

"idle_inhibitor": {
  "format": "{icon}",
  "format-icons": {
    "activated": "‚è∏Ô∏è",
    "deactivated": "‚ñ∂Ô∏è"
  },
  "tooltip": true,
  "tooltip-format-activated": "Idle inhibitor is active (prevents screen lock)",
  "tooltip-format-deactivated": "Idle inhibitor is off (permits screen lock)"
},

  "sway/window": {
    "format": "{title}",
    "max-length": 50,
    "tooltip": true,
    "tooltip-format": "{app_id}",
    "on-click-middle": "swaymsg kill",
  },

  "custom/launcher": {
    "format": "‡•ê",
    "on-click": "rofi -show drun",
    "tooltip": false,
  },

  "sway/workspaces": {
    "format": "{name}",
    "all-outputs": true,
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
      "5": [],
    },
  },

  "custom/current-mode": {
    "exec": "swaymsg -t get_mode | jq -r .mode",
    "interval": 1,
    "format": "{}",
    "tooltip": false,
  },

  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "{:%A, %d %B %Y}",
    "interval": 60,
    "on-click": "wldash"
  },

  "cpu": {
    "format": "‚∏é {usage}%",
    "interval": 2,
    "states": {
      "critical": 90,
    },
  },

  "memory": {
    "format": "‚∫∑ {percentage}%",
    "interval": 2,
    "states": {
      "critical": 80,
    },
  },

  "battery": {
    "format": "{icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "interval": 5,
    "tooltip-format": "{capacity}%",
  },

  "network": {
    "format-wifi": "Ôá´",
    "format-ethernet": "Û∞àÅ {bandwidthDownBits}",
    "format-disconnected": "Û∞ñ™",
    "interval": 5,
    "tooltip-format": "üì° {ifname} | {essid} ({signalStrength}%)\n‚¨á {bandwidthDownBits} ‚¨Ü {bandwidthUpBits}",
    "on-click": "alacritty -e nmtui",
  },

  "bluetooth": {
    "format": "Ôäî",
    "format-connected": "Ôäî {device_alias}",
    "format-disabled": "Ôäî",
    "interval": 5,
    "on-click": "bluejay",
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "Ôäî {volume}%",
    "format-muted": "Û∞ñÅ Muted",
    "format-icons": {
      "headphone": "Û∞ãã",
      "hands-free": "Û∞ãé",
      "headset": "Û∞ãé",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    },
    "on-click": "pavucontrol",
    "scroll-step": 2,
  },

  // Power menu integration
  "custom/power": {
    "format": "‚èª",
    "on-click": "wlogout -b 1 -c 0 -r 0 -m 0 --protocol layer-shell",
    "tooltip": false,
  },
}
